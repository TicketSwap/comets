{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "strict": true,
    "target": "es5",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules", "**/*.stories.tsx", "**/*.test.tsx"]
}
